<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E7EA">

    <TextView
        android:id="@+id/textView"
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="𝓓𝓪𝓲𝓵𝔂 𝓡𝓮𝓬𝓸𝓻𝓭"
        android:textColor="#7497EA"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagebtn"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/profile_image"
        android:src="@drawable/human"
        app:civ_border_color="#FFCCCCCC"
        app:civ_border_width="2dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="204dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="이름"
        android:paddingLeft="14dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagebtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="ID"
        android:paddingLeft="14dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_name" />

    <EditText
        android:id="@+id/join_password"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="비밀번호"
        android:paddingLeft="14dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_id" />

    <EditText
        android:id="@+id/join_pwck"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:paddingLeft="14dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_password" />

    <EditText
        android:id="@+id/join_email"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="이메일"
        android:paddingLeft="14dp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_pwck" />

    <EditText
        android:id="@+id/join_email2"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="직접입력"
        android:paddingLeft="14dp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/join_pwck" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="25dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/join_email"
        app:layout_constraintTop_toBottomOf="@+id/join_pwck" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:hint="이메일선택"
        android:background="@drawable/join_edit"
        app:layout_constraintStart_toEndOf="@+id/join_email2"
        app:layout_constraintTop_toBottomOf="@+id/join_pwck" />

    <EditText
        android:id="@+id/join_phonenumber"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="textPersonName"
        android:paddingLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_email" />

    <TextView
        android:id="@+id/join_gender"
        android:layout_width="57dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="성별"
        android:textSize="18dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_phonenumber" />

    <RadioGroup

        android:id="@+id/radio_group"
        android:layout_width="230dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:accessibilityHeading="false"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/join_gender"
        app:layout_constraintTop_toBottomOf="@+id/join_phonenumber">

        <RadioButton
            android:id="@+id/join_gender_m"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="남성" />

        <RadioButton
            android:id="@+id/join_gender_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여성" />
    </RadioGroup>

    <EditText
        android:id="@+id/join_birthday"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/join_edit"
        android:ems="10"
        android:focusable="false"
        android:hint="생년월일"
        android:inputType="textPersonName"
        android:onClick="birthday_onclick"
        android:paddingLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_gender" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/confirm"
        app:layout_constraintStart_toEndOf="@+id/join_id"
        app:layout_constraintTop_toBottomOf="@+id/join_name" />

    <Button
        android:id="@+id/delete"
        android:layout_width="121dp"
        android:layout_height="56dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/cancel_button"
        app:layout_constraintStart_toEndOf="@+id/join_button"
        app:layout_constraintTop_toBottomOf="@+id/join_birthday" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="121dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/join_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_birthday" />


</androidx.constraintlayout.widget.ConstraintLayout>